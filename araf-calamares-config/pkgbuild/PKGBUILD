pkgname=araf-calamares-config
pkgver=1.0
pkgrel=2
pkgdesc="ArafOS Custom calamares config"
arch=('any')
depends=()
options=(!strip !emptydirs)
source=("$pkgname.tar.gz")
#optdepends=('lightdm-gtk-greeter: for LightDM theming')
