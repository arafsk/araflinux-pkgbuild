# Maintainer: arafsk
pkgname=araflinux-system-installation
_pkgname=araflinux-system-installation
_destname1="/etc"
_destname2="/usr"
pkgver=25.12
pkgrel=02
pkgdesc="system installation config for araflinux"
arch=('any')
url="https://github.com/arafsk/araflinux-system-installation"
license=('GPL3')
makedepends=('git')
depends=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+$url")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_destname1}"
	cp -r "${srcdir}/${_pkgname}/${_destname1}"* "${pkgdir}"
	mkdir -p "${pkgdir}${_destname2}"
	cp -r "${srcdir}/${_pkgname}/${_destname2}"* "${pkgdir}"
}
