# Maintainer: Araf
pkgname=araflinux-system-installation
_pkgname=araflinux-system-installation
_destname1="/usr"
pkgver=25.12
pkgrel=03
pkgdesc="system installation config for Araf_OS"
arch=('any')
url="https://github.com/arafsk/${_pkgname}"
license=('GPL3')
makedepends=('git')
depends=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+$url")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_destname1}"
	cp -r "${srcdir}/${_pkgname}/${_destname1}"* "${pkgdir}"
}