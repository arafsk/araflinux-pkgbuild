# Maintainer: Araf

pkgname=araf-xfce-base
pkgver=1.0
pkgrel=01
pkgdesc="XFCE4 Desktop base configuration for araf"
arch=('any')
license=("custom")
depends=('mugshot' 'gtk3' 'thunar' 'network-manager-applet' 'ristretto' 'xdg-user-dirs' 'xfce4-appfinder' 'xfce4-cpugraph-plugin' 'xfce4-panel' 'xfce4-power-manager' 'xfce4-pulseaudio-plugin' 'xfce4-screenshooter' 'xfce4-session' 'xfce4-settings' 'xfce4-taskmanager' 'xfce4-whiskermenu-plugin' 'xfdesktop' 'xfwm4' 'xorg-xrandr')
options=(!strip !emptydirs)
source=("araf-xfce-applications.menu"
        "$pkgname.tar.gz")
sha512sums=('5653bb6a304f7c5c624857f0d7268b3ac21228f2586e654c7dd6fb94f518f7fe2dd0c6ec93ec1d5547acf7f636f93ca0cf6261e7caa2762ed9e9a88640957cc2'
            'fff7931d66b8dc540c6c8e77227ac85de245197bfaf315549c256fddf247b90de40dae1c045bcc461cbe12cab5e8c0c763e794f4552f611e573660489264e8d0')
install='readme.install'
package() {
  install -dm 755 "${pkgdir}/etc/skel"
  install -dm 755 "${pkgdir}/etc/xdg/menus/applications-merged"
  install -dm 755 "${pkgdir}/usr/share"

  cp -arf "${srcdir}/etc/skel" "${pkgdir}/etc/"
  cp -arf "${srcdir}/usr/share" "${pkgdir}/usr/"

  install -Dm644 "${srcdir}/araf-xfce-applications.menu" "${pkgdir}/etc/xdg/menus/applications-merged/araf-xfce-applications.menu"
  touch "${pkgdir}/etc/skel/.flag-xfce-once"
}
