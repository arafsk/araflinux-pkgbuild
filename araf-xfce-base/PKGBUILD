pkgname=araf-xfce-base
_pkgname=araf-xfce-base
_destname1="/etc/skel/.config/Thunar/"
_destname2="/etc/skel/.config/xfce4/"
_destname3="/etc/skel/.config/autostart/"
_destname4="/usr/share/icons/FairyWren_Dark/"
_licensedir="/usr/share/araf/licenses/"
pkgver=1.0.4
pkgrel=4
pkgdesc="XFCE base configuration for Araf_OS."
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
options=(!strip !emptydirs)
source=("$pkgname.tar.gz")
sha256sums=('aba7526593b1d5a7f76ea09a57aef595538b7595d51e8bdcc2034716f4944c7c')
install='readme.install'
package() {
  install -dm 755 "${pkgdir}/etc/skel/.config/Thunar"
  install -dm 755 "${pkgdir}/etc/skel/.config/xfce4"
  install -dm 755 "${pkgdir}/etc/skel/.config/autostart"
  install -dm 755 "${pkgdir}/usr/share/araf/licenses"
  install -dm 755 "${pkgdir}/usr/share/icons/FairyWren_Dark"

  mkdir -p "${pkgdir}${_licensedir}${_pkgname}"
  mv "${srcdir}/${_pkgname}/"LICENSE "${pkgdir}${_licensedir}${_pkgname}/LICENSE"
  mkdir -p "${pkgdir}${_destname1}"
  cp -r "${srcdir}/${_pkgname}/${_destname1}/"* "${pkgdir}${_destname1}"
  mkdir -p "${pkgdir}${_destname2}"
  cp -r "${srcdir}/${_pkgname}/${_destname2}/"* "${pkgdir}${_destname2}"
  mkdir -p "${pkgdir}${_destname3}"
  cp -r "${srcdir}/${_pkgname}/${_destname3}/"* "${pkgdir}${_destname3}"
  mkdir -p "${pkgdir}${_destname4}"
  cp -r "${srcdir}/${_pkgname}/${_destname4}/"* "${pkgdir}${_destname4}"
}
