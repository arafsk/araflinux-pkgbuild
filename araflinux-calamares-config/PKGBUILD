# Maintainer: Araf SK
pkgname=araflinux-calamares-config
_pkgname=araflinux-calamares-config
_destname1="/etc"
_destnamescript="/usr/bin"
pkgver=25.12
pkgrel=11
pkgdesc="calamares config for araflinux"
arch=('any')
url="https://github.com/arafsk/araflinux-calamares-config"
license=('GPL3')
makedepends=('git')
depends=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(araflinux-calamares-config::"git+https://github.com/arafsk/araflinux-calamares-config")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_destname1}"
	cp -r "${srcdir}/${_pkgname}/${_destname1}"* "${pkgdir}"
	mkdir -p "${pkgdir}${_destnamescript}"
}
