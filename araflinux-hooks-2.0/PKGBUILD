pkgrel=3
pkgdesc='Pacman hooks for Araflinux filesystem'
arch=('any')
#url="https://github.com/arafsk/araflinux-pkgbuild"
license=('GPL3')
source=(
		'araflinux-hooks.hook'
		'araflinux-release.hook'
		'araflinux-lsb-release.hook'
		'araflinux-pixmaps.hook'
		'araflinux-reboot-required.hook'
		'araflinux-hooks-runner'
		'araflinux-reboot-required'
		'araflinux.png'
		'araflinux.svg'
		'araflinux-logo.png'
		'araflinux-logo.svg'
		'araflinux-user.png'
		'araflinux-user.svg'
