package() {
	local hooks="$pkgdir"/usr/share/libalpm/hooks
	local pixmaps="$pkgdir"/usr/share/pixmaps
	local bin="$pkgdir"/usr/bin
	
	install -Dm 644 araflinux-hooks.hook           	"$hooks"/araflinux-hooks.hook
	install -Dm 644 araflinux-lsb-release.hook      "$hooks"/araflinux-lsb-release.hook
	install -Dm 644 araflinux-release.hook       "$hooks"/araflinux-release.hook
	install -Dm 644 araflinux-reboot-required.hook  "$hooks"/araflinux-reboot-required.hook
	install -Dm 644 araflinux-pixmaps.hook  		"$hooks"/araflinux-pixmaps.hook
			    
	install -Dm 755 araflinux-hooks-runner         	"$bin"/araflinux-hooks-runner
	install -Dm 755 araflinux-reboot-required       "$bin"/araflinux-reboot-required
			    
	install -Dm 644 araflinux.png       			"$pixmaps"/araflinux.png
	install -Dm 644 araflinux.svg       			"$pixmaps"/araflinux.svg
	install -Dm 644 araflinux-logo.png       		"$pixmaps"/araflinux-logo.png
	install -Dm 644 araflinux-logo.svg       		"$pixmaps"/araflinux-logo.svg
	install -Dm 644 araflinux-user.png       		"$pixmaps"/araflinux-user.png
	install -Dm 644 araflinux-user.svg       		"$pixmaps"/araflinux-user.svg
}
