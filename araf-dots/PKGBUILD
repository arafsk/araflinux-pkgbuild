# Maintainer: araf
pkgname=araf-dots
pkgver=1.0
pkgrel=1
pkgdesc="Systemwide Dotfiles for Araf."
arch=('any')
license=("custom")
depends=('bash')
source=("$pkgname.tar.gz")
sha512sums=('0ab1077c9c1355f00bb3037b37e8effd5f0b1f9e86a27e3b2c61fb590642c537dea46fbd99d96f2598c9466141edbc1094e9e00958c3848b3dfd27157e8b114c')
options=(!strip !emptydirs)

package() {
  install -dm 755 "${pkgdir}/"
  install -dm 755 "${pkgdir}/"
  cp -arf "$srcdir/usr" "$pkgdir/"
  cp -arf "$srcdir/etc" "$pkgdir/"
}
