# Maintainer: araf
pkgname=araf-dots
pkgver=1.0
pkgrel=1
pkgdesc="Systemwide Dotfiles for Araf."
arch=('any')
license=("custom")
depends=('bash')
source=("$pkgname.tar.gz")
sha512sums=('9304be0d2b929c0500878ce402b691bf29ce5cce639de22433f3ca6657ddffbf0529f979c97103f78379eff8a4a396d4151137c14fbb7a2e0b1b4d40122760b4')
options=(!strip !emptydirs)

package() {
  install -dm 755 "${pkgdir}/"
  install -dm 755 "${pkgdir}/"
  cp -arf "$srcdir/usr" "$pkgdir/"
  cp -arf "$srcdir/etc" "$pkgdir/"
}
