# Maintainer: Araf

pkgname=araf-dots-git
_pkgname=araf-dots
pkgver=25.12
pkgrel=01
pkgdesc="System-wide and user dotfiles (by Araf)"
arch=('any')
url="https://github.com/arafsk/araf-dots"
license=('GPL3')
makedepends=('git')
depends=('bash')
provides=('araf-dots')
conflicts=()
options=(!strip !emptydirs)
source=("${_pkgname}::git+https://github.com/arafsk/${_pkgname}.git")
sha256sums=('SKIP')

package() {
    local _install_paths=(/etc /usr)

    for _path in "${_install_paths[@]}"; do
        if [[ -d "${srcdir}/${_pkgname}${_path}" ]]; then
            echo "Installing files to ${_path}"
            install -dm755 "${pkgdir}${_path}"
            cp -a "${srcdir}/${_pkgname}${_path}/." "${pkgdir}${_path}/"
        fi
    done
}